@using Corretora.Imoveis.Core.Extensions;
@using Corretora.Imoveis.Core.Models.Contato;
@using Newtonsoft.Json;
@model ContatoLista
@{
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    <div class="col-lg-12 d-inline-flex">
        <div class="col-lg-10">
            <h4>Contato</h4>
        </div>
        <div class="col-lg-2" style="text-align-last: center;">
            <a class="btn-teal" asp-controller="Contato" asp-action="NovoContato">Inserir Contato</a>
        </div>
    </div>
    <hr />

    @if (Model?.ListaContatos?.Any() ?? false)
    {
        <!--servicos realizados Normal-->
        <form class="mt-5 pb-5 d-flex justify-content-center">

            <div class="col-lg-12 d-sm-inline-flex" style="flex-wrap: wrap; place-content: center;">

                @foreach (var contato in Model.ListaContatos)
                {
                    <div class="card-portfolio" onclick="onClickVerImovel(@JsonConvert.SerializeObject(contato))">
                        
                        else
                        {
                            <img src="~/imgs/sem-imagem.png" style="width: 100%; height: 65%;" />
                        }

                        <p class="mt-1" style="overflow-wrap: break-word; color: white"><b>@contato.Nome.ObterTextoSimplificado(80)</b></p>

                        <div style="display: grid;">
                            <small style="overflow-wrap: break-word; color: white">@contato.Messagem <b>...Ver mais</b></small>
                            <small style="overflow-wrap: break-word; color: white">@contato.Email</small>
                        </div>
                    </div>
                }

            </div>
        </form>
    }
    else
    {
        <div class="center-text container pt-5">
            <div class="message-warning">
                <h4 class="text-semi-bold-orange mt-3">Não foi encontrado nenhum registro !</h4>
            </div>
        </div>
    }


</div>
